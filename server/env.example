# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (Change this in production!)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# ===========================================
# AI ASSISTANT CONFIGURATION
# ===========================================

# Choose AI Provider: openai, localai
AI_PROVIDER=openai

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ===========================================
# Local AI Configuration (vLLM, Ollama, etc.)
# ===========================================
LOCAL_AI_URL=http://10.73.135.29:8000/v1
LOCAL_AI_API_KEY=your_local_ai_key_here
LOCAL_AI_MODEL=/home/aidata/h100/gpt-oss-120b/
LOCAL_AI_MAX_TOKENS=1000
LOCAL_AI_TEMPERATURE=0.7

# ===========================================
# Fallback Configuration
# ===========================================
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MESSAGE=Xin lỗi, AI Assistant tạm thời không khả dụng. Vui lòng thử lại sau.

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=your_email@gmail.com